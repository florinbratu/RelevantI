<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="SearchPanelStatic.css"/>
    <ui:with field='res' type='com.fbratu.relevant.gwt.client.Resources'/>
    <g:HTMLPanel>

        <h1>Relevant Real Estate search</h1>

        <table class="center">
            <tr>
                <td colspan="2" style="font-weight:bold;">TODO here should be our logo:</td>
            </tr>
            <tr>
                <td id="searchLocationFieldContainer">

                    <g:TextBox ui:field="searchLocationField"
                               addStyleNames="{res.style.searchLocationHint}"
                               enabled="true"
                               visible="true">
                        Location
                    </g:TextBox>
                </td>
                <td id="searchButtonContainer">
                    <g:Button ui:field="searchButton"
                              addStyleNames="{res.style.searchButton}"
                              visible="true">Search
                    </g:Button>
                </td>
            </tr>
            <tr>
                <td colspan="2" id="errorLabelContainer">
                    <g:Label ui:field="errorLabel"
                             addStyleNames="{res.style.errorLabel}"
                             visible="true">
                    </g:Label>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>

</ui:UiBinder>
