<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
             xmlns:search='urn:import:com.fbratu.relevant.gwt.client.view.search'
             xmlns:results='urn:import:com.fbratu.relevant.gwt.client.view.results'
             xmlns:um='urn:import:com.fbratu.relevant.gwt.client.view.um'>

    <ui:style src="MainPanel.css"/>

    <gwt:VerticalPanel>
        <!-- Login panel -->
        <um:UMPanel ui:field="userManagementPanel" addStyleNames="{style.right}"/>

        <!-- Main search deck -->
        <gwt:DeckPanel ui:field="mainPanel" addStyleNames="{style.center}">
            <gwt:LazyPanel ui:field="lazySearchPanel">
                <search:SearchPanel ui:field="searchPanel"/>
            </gwt:LazyPanel>
            <gwt:LazyPanel ui:field="lazySearchResultsPanel">
                <results:SearchResultsPanel ui:field="searchResultsPanel"/>
            </gwt:LazyPanel>
        </gwt:DeckPanel>
    </gwt:VerticalPanel>
</ui:UiBinder>