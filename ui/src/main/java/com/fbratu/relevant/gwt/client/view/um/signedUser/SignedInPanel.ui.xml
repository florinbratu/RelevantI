<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="SignedInPanel.css"/>
    <gwt:HTMLPanel>
        <gwt:HorizontalPanel>
            <gwt:cell verticalAlignment="ALIGN_MIDDLE">
                <gwt:Label text="Welcome" addStyleNames="{style.salutationText}" />
            </gwt:cell>
            <gwt:cell verticalAlignment="ALIGN_MIDDLE">
                <gwt:Label ui:field="usernameLabel" addStyleNames="{style.usernameText}" />
            </gwt:cell>
            <gwt:cell verticalAlignment="ALIGN_MIDDLE">
                <gwt:Label text="Logout" ui:field="logoutLink" addStyleNames="{style.logoutText}" />
            </gwt:cell>
        </gwt:HorizontalPanel>
    </gwt:HTMLPanel>
</ui:UiBinder>