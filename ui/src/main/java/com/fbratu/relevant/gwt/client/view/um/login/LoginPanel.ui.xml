<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="LoginPanel.css"/>
    <gwt:HTMLPanel>
            <gwt:HorizontalPanel>
                <gwt:cell verticalAlignment="ALIGN_MIDDLE">
                    <gwt:Label text="Login" addStyleNames="{style.labelText}" />
                </gwt:cell>
                <gwt:TextBox ui:field="usernameBox" addStyleNames="{style.box}" />
                <gwt:cell verticalAlignment="ALIGN_MIDDLE">
                    <gwt:Label text="Password" addStyleNames="{style.labelText}" />
                </gwt:cell>
                <gwt:PasswordTextBox ui:field="passwordBox"
                                     addStyleNames="{style.box}" />
                <gwt:Button ui:field="loginButton" text="Submit"
                           addStyleNames="{style.loginButton}" />
            </gwt:HorizontalPanel>
    </gwt:HTMLPanel>
</ui:UiBinder>